{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "LessonPatch",
    "properties": {
      "title": {
        "$id": "#/properties/title",
        "type": "string"
      },
      "visible": {
        "$id": "#/properties/visible",
        "type": "boolean"
      },
      "updatedBy": {
        "$id": "#/properties/updatedBy",
        "type": "string",
        "pattern": "[a-f0-9]{24}"
      },
      "position": {
        "$id": "#/properties/position",
        "type": "number"
      },
      "sections": {
        "$id": "#/properties/sections",
        "type": "array"
      }
    },
    "additionalProperties": false
}