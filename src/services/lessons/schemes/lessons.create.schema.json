{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "LessonCreate",
    "required": [
      "title",
      "courseId",
      "createdBy"
    ],
    "properties": {
      "title": {
        "$id": "#/properties/title",
        "type": "string"
      },
      "visible": {
        "$id": "#/properties/visible",
        "type": "boolean"
      },
      "courseId": {
        "$id": "#/properties/courseId",
        "type": "string",
        "pattern": "[a-f0-9]{24}"
      },
      "createdBy": {
        "$id": "#/properties/createdBy",
        "type": "string",
        "pattern": "[a-f0-9]{24}"
      },
      "fork": {
        "$id": "#/properties/fork",
        "type": "string",
        "pattern": "[a-f0-9]{24}"
      },
      "note": {
        "$id": "#/properties/note",
        "type": "string"
      }
    },
    "additionalProperties": false
}